{
  "name": "typescript-serverless-bootstrap",
  "version": "1.0.0",
  "author": "@mgarciadelojo",
  "license": "ISC",
  "description": "Bootstrap repository for serverless projects using TypeScript",
  "engineStrict": true,
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "deploy:sandbox": "sls deploy --stage sandbox",
    "remove:sandbox": "sls remove --stage sandbox",
    "deploy:staging": "sls deploy --stage staging",
    "remove:staging": "sls remove --stage staging",
    "deploy:production": "sls deploy --stage production",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.98",
    "@types/jest": "28.1.1",
    "@types/node": "17.0.40",
    "jest": "28.1.0",
    "jest-junit": "13.2.0",
    "serverless": "3.19.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-webpack": "5.7.1",
    "ts-jest": "28.0.4",
    "ts-loader": "9.3.0",
    "ts-standard": "11.0.0",
    "typescript": "4.4.4",
    "webpack": "5.73.0",
    "webpack-node-externals": "3.0.0"
  },
  "dependencies": {
    "middy": "0.24.0",
    "source-map-support": "0.5.21"
  }
}
