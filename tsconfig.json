{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ]
}
